<h1>Listing leads</h1>

<table class="table table-striped table-hover table-condensed">
  <tr>
    <th>Name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Company name</th>
    <th>Job title</th>
    <th>Phone</th>
    <th>Website</th>
    <th>Leading company</th>
    <th>Zoho</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @leads.each do |lead| %>
  <tr>
    <td><%= truncate(lead.name, length: 10) %></td>
    <td><%= truncate(lead.last_name, length: 15) %></td>
    <td><%= truncate(lead.email, length: 20) %></td>
    <td><%= truncate(lead.company_name, length: 10) %></td>
    <td><%= truncate(lead.job_title, length: 10) %></td>
    <td><%= truncate(lead.phone, length: 15) %></td>
    <td><%= truncate(lead.website, length: 20) %></td>
    <td><%= truncate(lead.company.name, length: 10) %></td>
    <td>
       <% if lead.on_zoho? %>
          <%= link_to lead_zoho_remove_path(lead), data: { confirm: 'It will remove the lead from Zoho. Are you sure?' }, class: "btn btn-danger" do %>
            <i class="icon-minus-sign"></i>
          <% end %>
        <% else %>
          <%= link_to lead_zoho_add_path(lead), class: "btn btn-success" do %>
            <i class="icon-plus-sign"></i>
          <% end %>
        <% end %>
    </td>

    <td>
      <%= link_to lead, class: "btn" do %>
        <i class="icon-eye-open"></i>
      <% end %>
    </td>
    <td>  
      <%= link_to edit_lead_path(lead), class: "btn" do %>
        <i class="icon-edit"></i>
      <% end %>
    <td>
      <%= link_to lead, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" do %>
          <i class="icon-trash"></i>
      <% end %>
    </tr>
  </tr>
<% end %>
</table>

<br />

