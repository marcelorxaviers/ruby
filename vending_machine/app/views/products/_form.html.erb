<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.quantity %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_for(@product) do |f| %>
  <% if @errors.try(:any?) %>
    <div id="error_explanation">
      <h2><%= pluralize(@errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @errors.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price, :class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :quantity %>
    <%= f.text_field :quantity, :class => 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>

<hr>

<div class="field">
  <%= label :machine, :balance %>
  <input type="text" id="balance" name="machine balance" disabled="disabled" size="10" value=<%="#{@balance.to_s}"%> />
</div>

<%= link_to('withdraw', withdraw_url, remote: true, method: :put) %>

<%= form_for('Refill', url: refill_url, remote: true, method: :put) do |f| %>
  <div class="field">
    <%= label :money, "Coins to refill (5p,  Â£2)" %><br>
    <%= text_field :money, :inserted %>
  </div>
  <div class="actions">
    <%= f.submit "Refill" %>
  </div>
<% end %>

<hr>
